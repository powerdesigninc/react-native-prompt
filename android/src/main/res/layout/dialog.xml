<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/dialog_background"
  android:orientation="vertical">

  <TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/dialog_space"
    android:layout_marginTop="@dimen/dialog_space"
    android:textColor="@color/text"
    android:textSize="@dimen/title"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/dialog_space"
    android:layout_marginVertical="@dimen/content_space"
    android:textColor="@color/text"
    android:textSize="@dimen/message"
    android:visibility="gone" />

  <EditText
    android:id="@+id/input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dialog_space"
    android:layout_marginVertical="@dimen/content_input_space"
    android:background="@drawable/input_background"
    android:textCursorDrawable="@drawable/input_cursor"
    android:textSize="@dimen/input" />

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/line" />
</LinearLayout>
